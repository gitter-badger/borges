
$primary   = #9febe2
$red       = #d31220
$gray      = #e8e8e8
$darkgray  = #d8d8d8
$lightgray = #f9f9f9
$time      = .3s

html,
body
  margin  0
  padding 0
  font-family 'Open Sans', 'Helvetica Neue'
  font-weight lighter
  color #121212
  font-size 14px
  height 100%

.borges
  background white

  main
    position relative
    height 100% !important

ul
  list-style none
  padding 0
  margin 0

.logo
  background url('/borges/assets/static/logo.svg') no-repeat
  background-position center

a
  text-decoration none
  color inherit

@require 'components/*.styl'
